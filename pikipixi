            { id: 32, category: 'performance', title: '누적 효과 약함', desc: '4주 사용 후 개선도가 1주차와 동일. 장기 효과 없음.', reason: 'CUMULATIVE BENEFIT ABSENT', date: '2024.05.05', severity: 'medium' }
        ];

        // Rejection Board State
        let currentRejectionFilter = 'all';

        // Initialize Rejection Board
        document.addEventListener('DOMContentLoaded', () => {
            renderRejectionBoard();
            
            // Rejection Filter Event Listeners
            const rejectionFilterBtns = document.querySelectorAll('.rejection-filter-btn');
            rejectionFilterBtns.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    rejectionFilterBtns.forEach(b => {
                        b.classList.remove('active', 'bg-slate-700');
                        b.classList.add('bg-slate-800', 'border', 'border-slate-700', 'text-slate-300');
                    });
                    
                    e.target.classList.remove('bg-slate-800', 'border', 'border-slate-700', 'text-slate-300');
                    e.target.classList.add('active', 'bg-slate-700', 'text-white');
                    
                    currentRejectionFilter = e.target.dataset.category;
                    renderRejectionBoard();
                });
            });
        });

        // Render Rejection Board
        function renderRejectionBoard() {
            const rejectionGrid = document.getElementById('rejectionGrid');
            const noRejections = document.getElementById('noRejections');
            
            const filtered = currentRejectionFilter === 'all' 
                ? rejectionData 
                : rejectionData.filter(r => r.category === currentRejectionFilter);
            
            if (filtered.length === 0) {
                rejectionGrid.innerHTML = '';
                noRejections.classList.remove('hidden');
                return;
            }
            
            noRejections.classList.add('hidden');
            
            // Show only first 12 for initial load, with "Load More" button
            const displayCount = 12;
            const toDisplay = filtered.slice(0, displayCount);
            
            rejectionGrid.innerHTML = toDisplay.map(rejection => createRejectionCard(rejection)).join('');
            
            // Add "Show More" button if there are more items
            if (filtered.length > displayCount) {
                rejectionGrid.innerHTML += `
                    <div class="md:col-span-3 text-center py-8">
                        <button onclick="showAllRejections()" class="px-8 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-lg font-bold transition">
                            ${filtered.length - displayCount}개 더 보기
                        </button>
                    </div>
                `;
            }
        }

        // Create Rejection Card
        function createRejectionCard(rejection) {
            const severityColors = {
                'critical': 'bg-red-500',
                'high': 'bg-orange-500',
                'medium': 'bg-yellow-500',
                'low': 'bg-blue-500'
            };

            const severityLabels = {
                'critical': '치명적',
                'high': '높음',
                'medium': '중간',
                'low': '낮음'
            };

            const categoryEmojis = {
                'texture': '🧴',
                'scent': '👃',
                'color': '🎨',
                'performance': '⚡'
            };

            return `
                <div class="bg-slate-800 p-6 rounded-xl border border-slate-700 hover:border-red-500 transition-all cursor-pointer group">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center gap-2">
                            <span class="text-2xl">${categoryEmojis[rejection.category]}</span>
                            <span class="${severityColors[rejection.severity]} w-2 h-2 rounded-full"></span>
                        </div>
                        <div class="text-right">
                            <div class="font-mono text-xs text-slate-500 mb-1">#${String(rejection.id).padStart(3, '0')}</div>
                            <div class="text-xs text-slate-600">${rejection.date}</div>
                        </div>
                    </div>
                    
                    <h4 class="font-bold text-white mb-2 group-hover:text-red-400 transition">${rejection.title}</h4>
                    <p class="text-sm text-slate-400 mb-4 leading-relaxed">${rejection.desc}</p>
                    
                    <div class="pt-4 border-t border-slate-700">
                        <div class="flex items-center justify-between">
                            <span class="text-xs px-2 py-1 rounded ${severityColors[rejection.severity]} text-white font-bold">
                                ${severityLabels[rejection.severity]}
                            </span>
                            <span class="text-xs font-mono text-red-300">${rejection.reason}</span>
                        </div>
                    </div>
                </div>
            `;
        }

        function showAllRejections() {
            const rejectionGrid = document.getElementById('rejectionGrid');
            const filtered = currentRejectionFilter === 'all' 
                ? rejectionData 
                : rejectionData.filter(r => r.category === currentRejectionFilter);
            
            rejectionGrid.innerHTML = filtered.map(rejection => createRejectionCard(rejection)).join('');
        }

        // Scroll reveal animation
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('active');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

        // Positioning Chart
        const ctx = document.getElementById('positioningChart');
        if (ctx) {
            new Chart(ctx.getContext('2d'), {
                type: 'scatter',
                data: {
                    datasets: [
                        {
                            label: '이솝/아베다 (Science)',
                            data: [{ x: 30, y: 85 }],
                            backgroundColor: 'rgba(59, 130, 246, 0.6)',
                            borderColor: 'rgba(59, 130, 246, 1)',
                            pointRadius: 12,
                            pointHoverRadius: 15
                        },
                        {
                            label: '케라스타즈 (Science)',
                            data: [{ x: 40, y: 90 }],
                            backgroundColor: 'rgba(59, 130, 246, 0.8)',
                            borderColor: 'rgba(59, 130, 246, 1)',
                            pointRadius: 12,
                            pointHoverRadius: 15
                        },
                        {
                            label: '탬버린즈/논픽션 (Magic)',
                            data: [{ x: 85, y: 40 }],
                            backgroundColor: 'rgba(245, 158, 11, 0.6)',
                            borderColor: 'rgba(245, 158, 11, 1)',
                            pointRadius: 12,
                            pointHoverRadius: 15
                        },
                        {
                            label: '모로칸오일 (Balanced)',
                            data: [{ x: 65, y: 65 }],
                            backgroundColor: 'rgba(16, 185, 129, 0.6)',
                            borderColor: 'rgba(16, 185, 129, 1)',
                            pointRadius: 10,
                            pointHoverRadius: 13
                        },
                        {
                            label: 'PIKIPIXI (Target)',
                            data: [{ x: 88, y: 92 }],
                            backgroundColor: 'rgba(236, 72, 153, 1)',
                            borderColor: 'rgba(236, 72, 153, 1)',
                            pointRadius: 18,
                            pointHoverRadius: 22,
                            pointStyle: 'star'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                usePointStyle: true,
                                padding: 15,
                                font: { size: 11 }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.dataset.label}: 감성 ${context.parsed.x}, 효능 ${context.parsed.y}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: '감성적 경험 (Emotional/Sensory) →',
                                font: { size: 14, weight: 'bold' }
                            },
                            min: 0,
                            max: 100,
                            grid: { color: 'rgba(100, 116, 139, 0.1)' }
                        },
                        y: {
                            title: {
                                display: true,
                                text: '과학적 검증 (Functional/Clinical) →',
                                font: { size: 14, weight: 'bold' }
                            },
                            min: 0,
                            max: 100,
                            grid: { color: 'rgba(100, 116, 139, 0.1)' }
                        }
                    }
                }
            });
        }

        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
</body>
</html>
